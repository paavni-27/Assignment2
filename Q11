public class Assignment2_part2 {
    public static void main(String[] args){
        int n;
        pattern11(n=4);
    }
    static void pattern11(int n){
        int sum=1;
        for (int i = 1; i <=n ; i++) {
            for (int j = 1; j <=i ; j++) {
                System.out.print(sum + " ");
                sum++;
            } System.out.println();
        }

    }
}

public class Assignment2 {
    public static void main(String[] args) {
        int n;
        pattern9(n = 5);
    }

    static void pattern9(int n) {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++) {
                if (j == i || j == n + 1 - i) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
                 System.out.println();
             }
        }
      }

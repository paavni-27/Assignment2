public class Assignment2 {
    public static void main(String[] args) {
        int n;
        pattern4(n = 5);
    }

    static void pattern4(int n){
        for (int i = 1; i <= n ; i++) {
            for (int j = 1; j <= (n-i)+1 ; j++) {
                if(j > n-i){
                    System.out.print(" * ");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();

        }
    }
  }
